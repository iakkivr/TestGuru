<% if object.errors.present? %>
  <div class="alert alert-danger col col-md-4 ">
    <h2>
        <%= t('.header', count: object.errors.count) %>:
    </h2>

    <ul class="mb-0">
      <% object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
