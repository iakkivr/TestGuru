<%= form_with model: [:admin, @badge],  local: true do |f| %>
  <div>
    <%= render 'shared/errors', object: @badge %>
  </div>
  <div class="mb-3 row m-lg-2">
    <%= f.label :title, class: 'col-sm-1 col-form-label' %>
    <%= f.text_field :title, placeholder: 'Title',
                     class: 'col-sm-5 col-form-label form-control' %>
  </div>

  <div class="mb-3 row m-lg-2">
    <%= f.label :url_image, class: 'col-sm-1 col-form-label' %>
    <%= f.text_field :url_image, placeholder: 'url_image',
                     class: 'col-sm-5 col-form-label form-control' %>
  </div>

  <div class="mb-3 row m-lg-2">
    <%= f.label :description, class: 'col-sm-1 col-form-label' %>
    <%= f.text_field :description, placeholder: 'Description',
                     class: 'col-sm-5 col-form-label form-control' %>
  </div>

  <div class="mb-3 row m-lg-2">
    <%= f.label :rule_type, class: 'col-sm-1 col-form-label' %>
    <%= f.select :rule_type, [['category','passed_all_category_tests'],'attempts','level'] %>
  </div>

  <div class="mb-3 row m-lg-2">
    <%= f.label :rule_value, class: 'col-sm-1 col-form-label' %>
      <%= f.text_field :rule_value, placeholder: 'option',
                     class: 'col-sm-5 col-form-label form-control' %>
  </div>

  <div class="m-lg-2">
    <%= f.submit class: 'btn btn-success mb-3 '%>
  </div>

<% end %>
