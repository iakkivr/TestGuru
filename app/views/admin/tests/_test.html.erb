  <article class="card">
    <div class="card-body">
      <h4><%= test.title %></h4>

      <div class="m-lg-2">
        <%= link_to t('helpers.link.show'), admin_test_path(test), class: 'btn btn-primary' %>
        <%= link_to t('helpers.link.edit'), edit_admin_test_path(test), class: 'btn btn-primary' %>
        <%= link_to t('helpers.link.delete'), admin_test_path(test),
                    method: :delete,
                    data: {confirm: 'Are you sure?'},
                    class: 'btn btn-danger' %>
        <%= pluralize(test.questions.count, 'question', plural: 'questions') %>
      </div>

      </div>
  </article>
