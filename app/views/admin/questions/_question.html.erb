<article class="card">
  <div class="card-body">
    <h4><%= question.body %></h4>
    <%= link_to t('helpers.link.show'), admin_question_path(question), class: 'btn btn-primary' %>
    <%= link_to t('helpers.link.edit'), edit_admin_question_path(question), class: 'btn btn-secondary' %>
    <%= link_to t('helpers.link.delete'), admin_question_path(question),
                method: :delete,
                data: { confirm: 'Are you sure?'},
                class: 'btn btn-danger' %>
  </div>
</article>
